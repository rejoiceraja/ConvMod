<resources>
    <!-- Base application theme. -->
    <style name="BlabberTabberTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="android:colorBackground">@color/blabbertabber_background_material_light</item>
        <item name="android:textColorPrimary">@color/primary_text_material_light</item>
    </style>
    <style name="containergrids">
        <item name="android:columnCount">1</item>
        <item name="android:rowCount">1</item>

    </style>
    <style name="sec_ord_grid">
        <item name="android:layout_rowWeight">1</item>
        <item name="android:layout_rowSpan">2</item>
        <item name="android:layout_columnSpan">1</item>
        <item name="android:columnCount">3</item>
        <item name="android:layout_gravity">fill_horizontal</item>
    </style>
    <style name="midsec_ord_grid" parent="sec_ord_grid">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_rowSpan">2</item>
        <item name="android:layout_columnSpan">2</item>
        <item name="android:columnCount">12</item>
    </style>
    <style name="sec_ord_piegrid" parent="sec_ord_grid">
        <item name="android:columnCount">1</item>
        <item name="android:layout_gravity">fill_vertical|fill_horizontal</item>
        <item name="android:gravity">center</item>
    </style>
<style name="button_grid" parent="sec_ord_grid">
    <item name="android:layout_rowSpan">1</item>
    <item name ="android:layout_columnSpan">2</item>
    <item name="android:columnCount">2</item>

</style>


    <style name="labels">
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">15sp</item>
        <item name="android:layout_gravity">fill_horizontal</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>
